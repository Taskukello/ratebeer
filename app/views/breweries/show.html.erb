
	<p id="notice"><%= notice %></p>

	<p>
		<h2> <%= @brewery.name %> brewery </h2>

	</p>

	<p>
		<i>  Established at <%=@brewery.year %> </i>
		

 

	</p>

	<p> 
		<i>Number of beers: </i><%=@brewery.beers.count%>
		<div>
		<i> <% if @brewery.ratings.empty? %>
			no ratings for beers.
		<% else %>
		<p>has <%=pluralize(@brewery.ratings.count ,'rating')%>, average rating: <%= @brewery.average_rating %></p> 
		<% end %> </i>
		</div>
	</p>
	

	<h3> Beers </h3>
	<table>
		<thead>
			<th>Beer name</th

			<% if @brewery.ratings.empty? %>
			<% else %>
		<th> average rating </th>
			<% end %>
		</thead>
			<% @brewery.beers.each do |beer| %>
			<tr>
				<td><%=link_to beer, beer%></td>
				<td><%=beer.average_rating%></td>	
				<% end %>
			</tr>
		</table>

		<%if current_user %>
<%= link_to 'Edit', edit_brewery_path(@brewery) %>
<%end%>
