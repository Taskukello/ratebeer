
	<p id="notice"><%= notice %></p>

	<p>
		<h2> <%= @brewery.name %> brewery </h2>
		  <% if not @brewery.active  %>
      <span class="label label-info">retired</span>
  <% end %>

	</p>

	<p>
		<i>  Established at <%=@brewery.year %> </i>
		

 

	</p>

	<p> 
		<i>Number of beers: </i><%=@brewery.beers.count%>
		<div>
		<i> <% if @brewery.ratings.empty? %>
			no ratings for beers.
		<% else %>
		<p>has <%=pluralize(@brewery.ratings.count ,'rating')%>, average rating: <%= @brewery.average_rating %></p> 
		<% end %> </i>
		</div>
	</p>
	

	<h3> Beers </h3>
	<table>
		<thead>
			<th>Beer name</th

			<% if @brewery.ratings.empty? %>
			<% else %>
		<th> average rating </th>
			<% end %>
		</thead>
			<% @brewery.beers.each do |beer| %>
			<tr>
				<td><%=link_to beer, beer%></td>
				<td><%=beer.average_rating%></td>	
				<% end %>
			</tr>
		</table>

		<%if current_user.Admin == true%>
<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>		
<%= link_to 'Edit', edit_brewery_path(@brewery), class:'btn btn-warning' %>
<%end%>
<%= link_to 'Back', breweries_path, class:'btn btn-primary' %>	
