<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

  <table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @beers.each do |beer| %>
      <tr>
        <td><%=link_to beer, beer%></td>
        <td><%= link_to beer.style.style, beer.style %></td>
        <td><%=link_to beer.brewery, beer.brewery%></td>
		<td><%= edit_and_destroy_buttons(beer) %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'list of breweries', breweries_path%>
<div></div>
<%= link_to('New Beer', new_beer_path) unless current_user.nil? %>
</br>