<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%=link_to beer, beer%></td>
        <td><%= beer.style %></td>
        <td><%=link_to beer.brewery, beer.brewery%></td>
		<%if current_user %>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'list of breweries', breweries_path%>
<div></div>
<%= link_to('New Beer', new_beer_path) unless current_user.nil? %>
</br>