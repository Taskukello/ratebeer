<p id="notice"><%= notice %></p>

<h1>Listing Beer Clubs</h1>

<% if current_user %>
<h2>Your clubs </h2>
<ul>
<% @memberships.each do |membership| %>
<% if current_user = membership.user %>
<li><%= membership.beer_club.name%></li>
<% end %>
<% end %>
</ul>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
		<% if current_user %>
			<td><%= link_to 'Join', "/beer_clubs/join/#{beer_club.id}", method: :post%></td>1
		<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer club', new_beer_club_path %>
</br>